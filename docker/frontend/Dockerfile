FROM nginx:1.25-alpine

# è®¾ç½®ç¯å¢ƒå˜é‡
ENV NGINX_PORT=9963

# å®‰è£…å¿…è¦å·¥å…·
RUN apk add --no-cache \
    python3 \
    py3-pip \
    curl

# åˆ›å»ºåº”ç”¨ç›®å½•
WORKDIR /app

# å¤åˆ¶å‰ç«¯æ–‡ä»¶
COPY frontend/ ./frontend/

# å¤åˆ¶Nginxé…ç½®
COPY docker/frontend/nginx.conf /etc/nginx/nginx.conf
COPY docker/frontend/default.conf /etc/nginx/conf.d/default.conf

# è®¾ç½®æƒé™
RUN chown -R nginx:nginx /app/frontend && \
    chmod +x /app/frontend/server.py

# åˆ›å»ºå¯åŠ¨è„šæœ¬
RUN cat > /app/start.sh << 'EOF'
#!/bin/sh
echo "ğŸš€ å¯åŠ¨OpenWrtç¼–è¯‘å™¨å‰ç«¯æœåŠ¡"
echo "ğŸ“ Nginxç«¯å£: $NGINX_PORT"
echo "ğŸ”— è®¿é—®åœ°å€: http://localhost:$NGINX_PORT"

# æ›¿æ¢Nginxé…ç½®ä¸­çš„ç«¯å£
sed -i "s/listen 9963/listen $NGINX_PORT/g" /etc/nginx/conf.d/default.conf

# å¯åŠ¨Nginx
exec nginx -g 'daemon off;'
EOF

RUN chmod +x /app/start.sh

# æš´éœ²ç«¯å£
EXPOSE 9963

# å¥åº·æ£€æŸ¥
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:9963/ || exit 1

# å¯åŠ¨å‘½ä»¤
CMD ["/app/start.sh"]
